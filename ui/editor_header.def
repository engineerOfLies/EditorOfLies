#editor header definition
name:         header
# a negative x or y position means to draw from the right or 
#bottom by the number.  so rect.x = -100 means to draw x = screen.w - x
# width or height of 0 means fill screen.  Anything less than 0 means 
# full screen less than the width specified
rect:         0,0,0,48
canHasFocus:  True
drawGeneric:  True
passesInput:  True
components:
  - type:       BUTTON
    name:       file_button
    id:         0
    rect:       0.005,0.1,1,1
    hotkey:     F1
    justify:    CENTER
    buttonText: File
    buttonType: STOCK
  - type:       BUTTON
    name:       view_button
    id:         3
    rect:       0.08,0.1,1,1
    hotkey:     F2
    justify:    LEFT
    buttonText: View
    buttonType: STOCK
  - type:       BUTTON
    name:       keys_button
    id:         1
    rect:       0.9,0.25,1,1
    hotkey:     F12
    justify:    CENTER
    buttonText: Level Keys
    buttonType: TEXT
  - type:       LABEL
    id:         10
    name:       title
    rect:       0.5,0.1,1,1
    text:       Editor Of Lies
    justify:    CENTER
    wordWrap:   False
    fontSize:   4
    color:      1,1,1
    alpha:      1
  - type:       LABEL
    id:         11
    name:       level_label
    rect:       0.65,0.1,1,1
    text:       'Level :'
    justify:    RIGHT
    wordWrap:   False
    fontSize:   3
    color:      1,1,1
    alpha:      1
  - type:       LABEL
    id:         12
    name:       layer_label
    rect:       0.65,0.5,1,1
    text:       'Layer :'
    justify:    RIGHT
    wordWrap:   False
    fontSize:   3
    color:      1,1,1
    alpha:      1
  - type:       LABEL
    id:         13
    name:       level_name
    rect:       0.66,0.1,1,1
    text:       '[no level]'
    justify:    LEFT
    wordWrap:   False
    fontSize:   3
    color:      1,1,1
    alpha:      1
  - type:       LABEL
    id:         14
    name:       layer_name
    rect:       0.66,0.5,1,1
    text:       '[no layer]'
    justify:    LEFT
    wordWrap:   False
    fontSize:   3
    color:      1,1,1
    alpha:      1
