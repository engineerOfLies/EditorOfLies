#editor header definition
name:         header
# a negative x or y position means to draw from the right or 
#bottom by the number.  so rect.x = -100 means to draw x = screen.w - x
# width or height of 0 means fill screen.  Anything less than 0 means 
# full screen less than the width specified
rect:         0,0,0,48
canHasFocus:  True
drawGeneric:  True
passesInput:  True
components:
  - type:       BUTTON
    name:       file_button
    id:         0
    rect:       0.01,0.1,1,1
    hotkey:     F1
    justify:    CENTER
    buttonText: File
    buttonType: STOCK
  - type:       BUTTON
    name:       keys_button
    id:         1
    rect:       0.8,0.1,1,1
    hotkey:     F2
    justify:    CENTER
    buttonText: Edit Keys
    buttonType: STOCK
  - type:       LABEL
    id:         10
    name:       title
    rect:       0.5,0.3,1,1
    text:       Editor Of Lies
    justify:    CENTER
    wordWrap:   False
    fontSize:   4
    color:      1,1,1
    alpha:      1
  - type:       SLIDER
    name:       test_slider
    vertical:   false
    id:         4
    rect:       0.25,0.5,150,16
    sliderType: COMMON
    barColor:   0,0,0
  
