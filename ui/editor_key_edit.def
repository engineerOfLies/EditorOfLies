#editor file menu definition
name:         file_menu
# a negative x or y position means to draw from the right or 
#bottom by the number.  so rect.x = -100 means to draw x = screen.w - x
# width or height of 0 means fill screen.  Anything less than 0 means 
# full screen less than the width specified
rect:         0.5,128,800,500
centerLeftRight: true
cemterTopBottom: true
canHasFocus:  True
drawGeneric:  True
passesInput:  False
components:
  - type:       LABEL
    id:         10
    name:       title
    rect:       0.5,0.015,1,1
    text:       Edit Keys
    justify:    CENTER
    wordWrap:   False
# fontSize and fontName are mutually exclusive
    fontSize:   3
#    fontName:
    color:      1,1,1
    alpha:      1
  - type:         LIST
    listType:     text
    name:         key_list
    id:           100
    rect:         0.05,0.075,0.87,0.8
    showVSlider:  true
    showHSlider:  false
  - type:       BUTTON
    name:       done
    id:         1
    rect:       0.85,0.9,1,1
    hotkey:     ENTER
    justify:    CENTER
    buttonText: Done
    buttonType: STOCK
  - type:       BUTTON
    name:       newkey
    id:         2
    rect:       0.1,0.9,1,1
    justify:    LEFT
    buttonText: New
    hotkey:     n
    buttonType: STOCK
  - type:       BUTTON
    name:       editkey
    id:         3
    rect:       0.25,0.9,1,1
    justify:    LEFT
    buttonText: Edit
    hotkey:     e
    buttonType: STOCK
  - type:       BUTTON
    name:       deletekey
    id:         4
    rect:       0.4,0.9,1,1
    justify:    LEFT
    hotkey:     '-'
    buttonText: Delete
    buttonType: STOCK
