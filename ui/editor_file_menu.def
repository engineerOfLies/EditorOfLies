#editor file menu definition
name:         file_menu
# a negative x or y position means to draw from the right or 
#bottom by the number.  so rect.x = -100 means to draw x = screen.w - x
# width or height of 0 means fill screen.  Anything less than 0 means 
# full screen less than the width specified
rect:         0.05,54,150,200
canHasFocus:  True
drawGeneric:  True
passesInput:  False
components:
  - type:             LIST
    listType:         text
    name:             file_ops_list
    allowSelection:   false
    backgroundAlpha:  0
    id:               1000
    rect:             0.01,0.01,0.99,0.99
    showVSlider:      true
    showHSlider:      false
    items:
    - type:       LABEL
      id:         10
      name:       title
      text:       File...
      wordWrap:   False
      fontSize:   3
      color:      1,1,1
      alpha:      1
    - type:       BUTTON
      name:       new_button
      id:         1
      rect:       0.01,0.25,138,1
      hotkey:     n
      hotkeymod:  LAlt
      justify:    CENTER
      buttonText: New Level
      buttonType: TEXT
    - type:       BUTTON
      name:       save_button
      id:         2
      rect:       0.01,0.4,138,1
      hotkey:     s
      hotkeymod:  LCtrl
      justify:    CENTER
      buttonText: Save Level
      buttonType: TEXT
    - type:       BUTTON
      name:       save_as_button
      id:         3
      rect:       0.01,0.55,138,1
      hotkey:     s
      hotkeymod:  LAlt
      justify:    CENTER
      buttonText: Save Level As
      buttonType: TEXT
    - type:       BUTTON
      name:       load_button
      id:         5
      rect:       0.01,0.7,138,1
      hotkey:     l
      hotkeymod:  LAlt
      justify:    CENTER
      buttonText: Load Level...
      buttonType: TEXT
    - type:       BUTTON
      name:       quit_button
      id:         4
      rect:       0.01,0.85,138,1
      hotkey:     q
      hotkeymod:  LAlt
      justify:    CENTER
      buttonText: Quit Editor
      buttonType: TEXT

